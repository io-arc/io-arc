extends assets/layouts/_base

block prepend consts
  -
    // Language key for 'assets/data/lang.yml'
    const $lang = 'ja'

    // Page title
    const $title = SITE_TITLE

    // Page description
    const $description = SITE_DESCRIPTION

    // OGP settings
    const $ogp = {
      use: true, // insert flag (require)
      type: 'website',
      url: `${SITE_URL}/`,
      title: TITLE,
      image: `${SITE_URL}/ogp.png`
    }

    var _api = config('api')
    var _layout = config('layout')

block body
  p= SITE_TITLE
  p: img(src="../img/arc-one-logo.png", alt="")
  p= _api
  p= _layout
